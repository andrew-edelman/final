<div class = "row">
    <div class = "col">
        <h1><%= @venue[:venue_name] %></h1>
        <h3><%= @venue[:address] %></h3>
    </div>
</div>

<div class = "row mt-5">
    <div class = "col-md-8">
        <h3>Ratings</h3>
    </div>
    <div class = "col-md-4">
        <h3>Booking Contact</h3>
    </div>
</div>
<div class = "row">
    <div class = "col-md-4">
        <p>Overall: <%= @venue[:avg_overall] %>/5
            <% if @venue[:avg_overall] >3.5%>
                    <i class="fas fa-smile"></i>
            <% elsif @venue[:avg_overall] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
        </p>
        <p>Payout: <%= @venue[:avg_payout] %>/5
             <% if @venue[:avg_payout] >3.5%>
                    <i class="fas fa-smile"></i>
            <% elsif @venue[:avg_payout] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>       
        </p>
    </div>
    <div class = "col-md-4">
        <p>Sound: <%= @venue[:avg_sound] %>/5
            <% if @venue[:avg_sound] >3.5%>
                    <i class="fas fa-smile"></i>
            <% elsif @venue[:avg_sound] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
        </p>
        <p>Vibe: <%= @venue[:avg_vibe] %>/5
            <% if @venue[:avg_vibe] >3.5%>
                    <i class="fas fa-smile"></i>
            <% elsif @venue[:avg_vibe] >= 2.5 %>
                <i class="fas fa-meh"></i>
            <% else %>
                <i class="fas fa-frown"></i>
            <% end %>
        </p>
    </div>
    <div class = "col-md-4 col-md-offset-4">
        <p>Email: <%= @venue[:email] %></p>
        <p>Phone: <%= @venue[:phone] %></p>
        <p>Website: <a href="<%@venue[:website]%>"><%=@venue[:website]%></a></p>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <a href ="/venues/<%= @venue[:id] %>/reviews/new" class="btn btn-outline-primary">Write a Review</a>
    </div>
</div>

<div class = "row mt-3">
    <div class = "col">
        <h3>Reviews</h3>
    </div>
</div>